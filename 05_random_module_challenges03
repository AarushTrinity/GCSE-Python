#Import random
import random
#Create a list with heads or tails (h or t)
heads_or_tails = ["h","t"]
#Use random to generate h or t and store it in a variable called "coin"
coin = random.choice(heads_or_tails)
#Ask the user to guess to guess h or t (and store it in a variable)
guess = str(input("Heads of tails? (h or t) "))

#If the user guesses correctly, display "You Win!!!"
if guess == coin:
    print("You Win!!!")
    
#Otherwise, display "bad luck"
elif guess != coin:
    print("bad luck")
    
    #If the coin turns out to be the other choice, either display "it was heads" or "it was tails"
    if coin ==  "h":
        print("it was heads")
    elif coin == "t":
        print("it was tails")
